<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.example.hp.college.util.CustomToolBar
        android:id="@+id/act_tb_changedpsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_back"
        app:text="修改密码"
        app:BackgroundColor="@color/colorBackGround"
        app:textColor="@color/titileColor">
    </com.example.hp.college.util.CustomToolBar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:text="旧密码:" />

        <EditText
            android:id="@+id/et_original_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="number"
            android:paddingLeft="2dp"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:text="新密码:" />
        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="number"
            android:paddingLeft="2dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:text="确认密码:" />
        <EditText
            android:id="@+id/et_again_new_psw"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:inputType="number"
            android:paddingLeft="2dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confrimchanged"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#45a0ef"
        android:text="确认修改"
        android:gravity="center"
        android:textColor="#FFFFFF" />
</LinearLayout>